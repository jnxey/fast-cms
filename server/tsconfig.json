{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2015",
    "module": "ES2015",
    "strict": true,
    "allowJs": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["**/*.ts"],
  "ts-node": {
    "experimentalSpecifierResolution": "node",
    "esm": true,
    "files": true,
    "require": ["tsconfig-paths/register"]
  }
}
